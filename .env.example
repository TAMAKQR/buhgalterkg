ADMIN_DISPLAY_NAME="Web Admin"
ADMIN_SESSION_SECRET="set-a-strong-secret"
ADMIN_SESSION_TTL_MINUTES="720"
ADMIN_PASSWORD_MIN_LENGTH="10"
ADMIN_LOGIN_ATTEMPTS="5"
ADMIN_LOGIN_WINDOW_MINUTES="15"
ADMIN_TELEGRAM_CHAT_ID="123456789"
