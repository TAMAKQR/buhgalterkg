# Required for Prisma connection (Render PostgreSQL URL)
DATABASE_URL="postgresql://user:pass@host:5432/telegram_hotel"

# Telegram bot token (BotFather)
TELEGRAM_BOT_TOKEN="123456:ABCDEF"

# Helpful for local development override
NEXT_PUBLIC_DEV_TELEGRAM_ID="100000000"
NEXT_PUBLIC_DEV_ROLE="ADMIN"

# Manual admin web login
